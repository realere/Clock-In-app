<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bright.moments.clockin" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Clock-In</name>
    <description>
        A sample attendance management for students created as my capstone project at GCU .
    </description>
    <author email="alaere.samuel@gmail.com" href="http://cordova.io">
       Msc Student at Glasgow Caledonian University 
    </author>
    <content src="login.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <preference name="Orientation" value="portrait" />
    <preference name="target-device" value="handset" />
    <preference name="deployment-target" value="7.0" />
    <preference name="SupressLongPressGesture" value="true" />
    <preference name="Supress3DTouchGesture" value="true" />
    <preference name="InAppBrowserStorageEnabled" value="true" />
    <engine name="android" spec="~7.0.0" />
</widget>
